<h2>Books</h2>

<table>
  <% @books.each do |book| %>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      Show Edit Destroy
    </td>
  </tr>
  <% end %>
</table>  


<%= form_with model: Book.new do |f| %>
<h2>New book</h2>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<p><%= f.submit "Create Book" %></p>

<% end %>
